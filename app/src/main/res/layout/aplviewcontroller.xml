<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customButton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".APLViewController">

    <RelativeLayout
        android:id="@+id/id_8Gf_Cu_2fQ"
        android:layout_width="320dp"
        android:layout_height="548dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="20dp"
        android:background="#FFF">

        <ImageView
            android:id="@+id/_firstPieceView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/cyansquare" />

        <ImageView
            android:id="@+id/_secondPieceView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="280dp"
            android:src="@drawable/magentasquare" />

        <ImageView
            android:id="@+id/_thirdPieceView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/yellowsquare" />

        <TextView
            android:id="@+id/_touchPhaseText"
            android:layout_width="253dp"
            android:layout_height="21dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="24dp"
            android:hint="&quot;Touches&quot; lets you observe touch"
            android:text="&quot;Touches&quot; lets you observe touch"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/_touchTrackingText"
            android:layout_width="193dp"
            android:layout_height="21dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="45dp"
            android:hint="phases and multiple taps."
            android:text="phases and multiple taps."
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/_touchInfoText"
            android:layout_width="0.0dp"
            android:layout_height="0.0dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="76dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/_touchInstructionsText"
            android:layout_width="0.0dp"
            android:layout_height="0.0dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="448dp"
            android:lines="2"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</RelativeLayout>
